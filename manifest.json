{
    "manifest_version": 2,

    "name": "Buildbot log auto scroll",
    "short_name": "bbot-ascroll",
    "description": "Scroll automagically to end of buildbot logs",

    "version": "1.3.3",
    "homepage_url": "http://wanders.github.io/chrome-buildbot-autoscroll/",

    "icons": { "16": "nut16.png",
               "48": "nut48.png",
               "128": "nut128.png"},

    "content_scripts": [
	{
	    "matches": ["*://*/*builders/*/builds/*/steps/*/logs/stdio"],
	    "run_at": "document_start",
	    "js": ["buildbotautoscroll.js"]
	}
    ]
}
